@model Homie.Areas.Cigars.Models.CigarsModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
    ViewBag.Title = "Удалить сигару";
    
}
<div>
    <dl class="dl-horizontal">
        <dt>Название:</dt>
        <p></p>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <p></p>
    <div>
        <form asp-controller="Cigar" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Удалить" />
                <a asp-action="Index" asp-controller="Cigar" asp-area="Cigars"
                   class="btn btn-primary"
                   role="button">Назад</a>
            </div>
        </form>
    </div>
</div>

