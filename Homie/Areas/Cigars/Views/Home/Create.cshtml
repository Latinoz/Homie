@model Homie.Areas.Cigars.Models.CigarsModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
    ViewBag.Title = "Добавить сигару";
    
}

<style>
        .text-input-width {
            width: 328px;
        }

        .number-input-width {
            width: 95px;
        }
</style>

<form asp-controller="home" asp-action="create">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control text-input-width" />
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label">Страна</label>
            <input type="text" asp-for="Country" class="form-control text-input-width" />
        </div>

        <div class="form-group">
            <label asp-for="Shape" class="control-label">Формат</label>
            <select asp-for="FormatId"
                    class="form-control" style="width:328px;"
                    asp-items="@(new SelectList(@ViewBag.ListofShapes,"Id","ShapeName"))"></select>
        </div>

        <div class="form-group">
            <label asp-for="Strength" class="control-label">Крепость</label>
            <input type="text" asp-for="Strength" class="form-control text-input-width" />
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label">Рейтинг</label>
            <input type="number" asp-for="Rating" class="form-control number-input-width" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control number-input-width" />
        </div>

        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Home" asp-area="Cigars"
               class="btn btn-primary"
               role="button">Назад</a>
        </div>
</form>
