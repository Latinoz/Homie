@model IEnumerable<Homie.Areas.Series.Models.ArchMovies>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>
<html>
<head>
   
</head>
<body class="m-1 p-1">
    <table class="table table-bordered table-striped table-sm">
        <tr><th>Название</th><th>Сезон</th><th>Серия</th><th>Минуты</th><th>Секунды</th><th></th></tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Season</td>
                <td>@p.Episode</td>
                <td>@p.StopPlayMinute</td>
                <td>@p.StopPlaySecond</td>

                <td>
                    <a asp-action="Back" asp-controller="Home" asp-route-id="@p.Id">Вернуть</a> |
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@p.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@p.Id">Удалить</a>
                </td>
            </tr>

        }
    </table>
    
</body>
</html>