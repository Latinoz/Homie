@model Homie.Areas.Series.Models.MoviesModel

@{
    ViewBag.Title = "Изменение";
    
}

<style>
    .text-input-width {
        width: 328px;
    }

    .number-input-width{
        width: 80px;
    }

</style>

<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control text-input-width" />
    </div>
    <div class="form-group">
        <label asp-for="Link" class="control-label">Ссылка</label>
        <input type="text" asp-for="Link" class="form-control text-input-width" />
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label">Категория</label>
        <input type="text" asp-for="Category" class="form-control text-input-width" />
    </div>
    <div class="form-group">
        <label asp-for="Season" class="control-label">Сезон</label>
        <input type="number" asp-for="Season" class="form-control number-input-width" />
    </div>
    <div class="form-group">
        <label asp-for="Episode" class="control-label">Серия</label>
        <input type="number" asp-for="Episode" class="form-control number-input-width" />
    </div>
    <div class="form-group">
        <label asp-for="HoldPlay" class="control-label">Время</label>
        <input id="result" type="hidden" asp-for="HoldPlay" class="form-control" />
    </div>
    <div align="left">
        <input id="inpval1" type="text" maxlength="2" size="2" />
        <input id="inpval2" type="text" maxlength="2" size="2" />
        <input id="inpval3" type="text" maxlength="2" size="2" />
    </div>

    <script>
        $(document).ready(function () {
            var $oneInput = $('#inpval1');
            var $twoInput = $('#inpval2');
            var $threeInput = $('#inpval3');
            var $result = $('#result');

            function updateRange() {
                $result.val($oneInput.val() + ":" + $twoInput.val() + ":" + $threeInput.val());
            }
            $('#inpval1,#inpval2,#inpval3').on('change', updateRange);
        });

    </script>

    <div class="form-group">
        @Html.HiddenFor(m => m.Archive)
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Home" asp-area="Series"
           class="btn btn-danger"
           role="button">Назад</a>
    </div>
</form>

    

