@model Homie.Areas.Series.Models.MoviesModel

@{
    ViewBag.Title = "Изменение";
    
}
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Season" class="control-label">Сезон</label>
            <input type="number" asp-for="Season" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Episode" class="control-label">Серия</label>
            <input type="number" asp-for="Episode" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StopPlayHour" class="control-label">Час. остановки</label>
            <input type="number" asp-for="StopPlayHour" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StopPlayMinute" class="control-label">Мин. остановки</label>
            <input type="number" asp-for="StopPlayMinute" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StopPlaySecond" class="control-label">Сек. остановки</label>
            <input type="number" asp-for="StopPlaySecond" class="form-control" />
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => m.Archive)
        </div>
        <div class="form-group">
            <input type="submit" value="Изменить" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Home" asp-area="Series"
               class="btn btn-primary"
               role="button">Назад</a>
        </div>
    </form>

