@model Homie.Areas.Series.Models.MoviesModel

@{
    ViewBag.Title = "Добавить";
    
}
    <form asp-action="create" asp-controller="home">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Link" class="control-label">Ссылка</label>
            <input type="text" asp-for="Link" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Season" class="control-label">Сезон</label>
            <input type="number" asp-for="Season" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Episode" class="control-label">Серия</label>
            <input type="number" asp-for="Episode" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category" class="control-label">Категория</label>
            <input type="text" asp-for="Category" class="form-control" />
        </div>        

        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-primary" />
            <a asp-action="Index" asp-controller="Home" asp-area="Series"
               class="btn btn-primary"
               role="button">Назад</a>
        </div>
    </form>
