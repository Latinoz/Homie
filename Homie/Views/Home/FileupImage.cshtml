@model IEnumerable<Homie.Models.Image>

@{
    ViewBag.Title = "Добавление изображения";
}
<form asp-action="Create" asp-controller="Home" asp-area="" method="post" enctype="multipart/form-data">
    <p>
        <label>Имя</label>
        <input name="NameImgVM" class="form-control" />
    </p>
    <p>
        <label>Аватар</label>
        <input name="AvatarFile" type="file" class="form-control" />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>
<h3>Все пользователи</h3>
@foreach (var p in Model)
{
    <div>
        <h4>@p.NameImg</h4>
        @if (p.Avatar != null)
        {
            <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Avatar))" />
        }
    </div>
}